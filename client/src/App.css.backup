/* Grouped Electronics Rows Styling */
/* Collapsed group row - neutral/white background */
.table-modern tbody tr.grouped-electronics-row {
  background-color: #ffffff !important;
  border-left: 4px solid #16a34a;
  font-weight: 500;
}

/* Expanded group row - green background to clearly show it's active/expanded */
.table-modern tbody tr.grouped-electronics-row.expanded-row {
  background-color: #dcfce7 !important;
  border-left: 4px solid #22c55e;
}

.table-modern tbody tr.grouped-electronics-row:hover {
  background-color: #f0fdf4 !important;
}

